# Development Dockerfile with hot reload support
# 
# Build from workspace root:
#   docker build -f connectors/grafana/Dockerfile.dev -t grafana-connector:dev .
#
# Or use docker-compose with proper build context

FROM python:3.12.2-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Set initial work directory
WORKDIR /workspace

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    gettext-base \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv for faster dependency management
RUN pip install uv

# Copy mcp_pkg to the expected location (two levels up from connector)
# This requires building from workspace root context
COPY mcp_pkg /workspace/mcp_pkg

# Create the connector directory structure
RUN mkdir -p /workspace/connectors/grafana

# Copy dependency files to maintain relative path structure
COPY connectors/grafana/pyproject.toml connectors/grafana/uv.lock* /workspace/connectors/grafana/

# Change to connector directory for uv sync
WORKDIR /workspace/connectors/grafana

# Install Python dependencies using uv
RUN uv sync --frozen || uv sync

# Copy application code to the workspace structure
COPY connectors/grafana/ /workspace/connectors/grafana/

# Set proper permissions for entrypoint script
RUN chmod +x /workspace/connectors/grafana/entrypoint.sh

# Set work directory to the connector directory
WORKDIR /workspace/connectors/grafana

# Update PATH to include the venv from the workspace location
ENV PATH="/workspace/connectors/grafana/.venv/bin:$PATH" \
    PYTHONPATH="/workspace/connectors/grafana"

# Expose port (connector runs on 8029)
EXPOSE 8029

# Default command with reload enabled for development
CMD ["sh", "entrypoint.sh"]



